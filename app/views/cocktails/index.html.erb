  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
      <div class="col-md-4" style="margin: 10px;">
        <% if cocktail.photo.attached? %>
          <div class="card-category" style="background-image:
          linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
          url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>'); width: 250px; height: 250px;">
            <h5><%= cocktail.name %></h5>
            <ul>
              <% cocktail.ingredients[0..2].each do |ingredient|%>
                <li><%= ingredient.name %></li>
              <% end %>
            </ul>
          </div>
